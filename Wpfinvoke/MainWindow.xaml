<Window x:Class="Wpfinvoke.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfinvoke"
        mc:Ignorable="d"
        Title="Calculator" Height="236.45" Width="307.252" ResizeMode="CanMinimize">
    <Grid Margin="0,0,2,-29">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="input" HorizontalAlignment="Left" Margin="42,77,0,127" TextWrapping="Wrap" Width="221" Background="White" MaxLines="1">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2"/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="confirmation" Content="Calculate" HorizontalAlignment="Left" Margin="110,151,0,0" VerticalAlignment="Top" Width="75" Click="okclick" Height="19">
        </Button>
        <Label Content="Please enter the formula" HorizontalAlignment="Left" Margin="42,27,0,0" VerticalAlignment="Top" FontSize="18" Height="33" Width="221"/>

    </Grid>
</Window>
